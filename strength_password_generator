import re
special_chars = ('[@,_!#$%^&*()<>?/\|}{~:]')
password = 0

def small_cheker(password):
    for i in password:
        if i.islower():
            return True
        else:
            return False

def capital_checker(password):
    if any(i.isupper() for i in password):
        return True
    else:
        return False

def special_checker(password):
    try:
        for i in special_chars:
            for j in password:
                if i == j:
                    return True
                else:
                    continue
                    return False
    except:
        print('no special')

def number_checker(password):
    try:
        digits_only_string = ''.join(filter(str.isdigit, password))
        p = int(digits_only_string)
        check = type(p)
        if (check == int):
            return True
    except:
        return False
            
def enter_number():
    print('Password must contain atleast one number, special, small, capital charectors')
    while True:
        global password
        password = input('enter the password: ')
        lengthchecker = len(password)
        if (lengthchecker < 10):
            print('must above 10 char')
            continue
        else:
            num_caller = number_checker(password)
            if num_caller == False:
                print('password must contain number')
                continue
                        
        special_caller = special_checker(password)
        if special_caller != True:
            print('no special')
            continue
            
        capital_caller = capital_checker(password)
        if capital_caller != True:
            print('add uppercase')
            continue
        small_caller =small_cheker(password)
        if small_caller != True:
            print('no small charectors')
            continue
        else:
            print('password is perfect')
            
        break
enter_number()
