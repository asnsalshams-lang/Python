while True:
    def spaceloop():
        for i in range(0, 48, 8):
            leading_spaces = '-' * i
            print(leading_spaces)
    spaceloop()
    def backloop():
        for i in range(48, 1, -8):
            leading_spaces = '-' * i
            print(leading_spaces)
    backloop()
    
